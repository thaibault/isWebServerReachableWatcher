{
  "name": "reachable-watcher",
  "version": "1.0.9",
  "license": "CC-BY-3.0",
  "description": "Check status codes of web servers and sends notification e-mails",
  "homepage": "http://torben.website/reachableWatcher",
  "documentationWebsite": {
    "name": "reachableWatcher",
    "trackingCode": "UA-40192634-15"
  },
  "keywords": [
    "reachable",
    "watcher",
    "bash",
    "status",
    "code",
    "checker",
    "online"
  ],
  "files": [
    "reachableWatcher.service"
  ],
  "main": "reachableWatcher.sh",
  "bin": {
    "reachableWatcher": "reachableWatcher.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/reachableWatcher"
  },
  "scripts": {
    "clear": "rm --recursive apiDocumentation &>/dev/null || true",
    "document": "mkdir --parents apiDocumentation/backupRotation/latest && bashlink-document backupRotation 1>apiDocumentation/backupRotation/latest/index.html",
    "document:show": "bashlink-document backupRotation",
    "document:show:error": "bashlink-document backupRotation 1>/dev/null",
    "lint": "hash shellcheck && shellcheck -x *.sh || echo Please install \"shellcheck\". || true",
    "lint:given": "shellcheck -x",
    "test": "bashlink-doctest --verbose backupRotation",
    "update": "npm version patch && npm publish",
    "update:documentation": "documentationWebsite --log-level info"
  },
  "devDependencies": {
    "bashlink": "^1.0.26",
    "documentation-website": "^1.0.100",
    "shellcheck": "0.0.8"
  }
}
